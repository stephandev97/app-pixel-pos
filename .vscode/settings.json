{
  // ðŸ‘‰ Formatea automÃ¡ticamente al guardar
  "editor.formatOnSave": true,

  // ðŸ‘‰ Corre todos los fixes de ESLint al guardar
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },

  // ðŸ‘‰ Activa ESLint en estos lenguajes
  "eslint.validate": ["javascript", "javascriptreact", "json"],

  // ðŸ‘‰ Config de Prettier
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 100,
  "prettier.arrowParens": "always",
  "prettier.endOfLine": "lf"
}
