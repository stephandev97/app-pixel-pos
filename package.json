{
  "name": "pixel-pos2",
  "version": "2.1.6",
  "build": {
    "appId": "PixelPOS2",
    "productName": "pixel-pos2",
    "asar": true,
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "public/main.js"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraMetadata": {
      "main": "public/main.js"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "stephandev97",
        "repo": "app-pixel-pos",
        "releaseType": "release"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico",
      "artifactName": "pixel-pos2-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    }
  },
  "homepage": "./",
  "main": "public/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron:serve": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm run electron:start\"",
    "electron:build": "npm run build && electron-builder -w",
    "electron:start": "wait-on tcp:3000 && electron .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "publish": "npm run build && electron-builder -w --publish always"
  },
  "lint-staged": {
    "*.{js,jsx,cjs,mjs,json,md,css}": [
      "prettier --write"
    ],
    "*.{js,jsx,cjs,mjs}": [
      "eslint --fix"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.1.3",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@reduxjs/toolkit": "^2.2.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron-is-dev": "^3.0.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "escpos": "^3.0.0-alpha.6",
    "escpos-usb": "^3.0.0-alpha.4",
    "formik": "^2.4.5",
    "framer-motion": "^12.23.12",
    "jimp": "^1.6.0",
    "lucide-react": "^0.544.0",
    "pocketbase": "^0.26.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-feather": "^2.0.10",
    "react-file-reader": "^1.1.4",
    "react-hook-form": "^7.51.3",
    "react-icons": "^5.5.0",
    "react-redux": "^9.1.1",
    "react-scripts": "5.0.1",
    "react-select": "^5.10.1",
    "react-to-print": "^3.1.0",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "redux-thunk": "^3.1.0",
    "styled-components": "^6.1.8",
    "uniqid": "^5.4.0",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^30.0.2",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.4.0",
    "prettier": "3.6.2",
    "react-devtools-electron": "^4.7.0",
    "wait-on": "^7.2.0"
  }
}
